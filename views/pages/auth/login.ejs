<h1>Login</h1>

<form method="POST">
    <div class="mb-3">
        <label for="email" class="form-label">
            Email
        </label>
        <input
            type="email"
            value="<%= form.email %>"
            id="email"
            name="email"
            class="form-control"
            required
        >
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">
            Password
        </label>
        <input
            type="password"
            value="<%= form.password %>"
            id="password"
            name="password"
            class="form-control"
            required
        >
    </div>

    <button class="btn btn-primary">
        Login
    </button>
</form>

<% if (errors) { %>
    <div class="alert alert-danger mt-3">
        Incorrect email or password
    </div>
<% } %>
